extends layout

block content
	script(src="/javascripts/jquery-3.1.1.min.js")
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4.middle
				form(class="form-create-poll", action="/polls/new", method="POSTS")
					input(type="text", name="title", placeholder="Title", required, autofocus, class='form-control')
					input(type="text", name="creator", placeholder="Username", required, class='form-control')
					input(type="text", name="question", required, placeholder="Question", class='form-control')
					input(type="text", name="choice-1", required, placeholder="Choice", class='form-control')
					input(type="text", name="choice-2", required, placeholder="Choice", class='form-control')
					button(class='btn btn-lg btn-primary btn-block', type='submit')
						|Submit
				
